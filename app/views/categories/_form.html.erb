<%= render 'shared/error_messages',obj:@category %>
<%= form_with(model:@category, class:"shadow p-3 mb-2 bg-info rounded",local:true)  do |f| %>
<div class="form-group row">
    <%= f.label :name, class:"col-2 col-form-label text-light" %> 
    <div class="col-10">
        <%= f.text_field  :name, class:"form-control shadow rounded", placeholder:"Please enter name" %>
    </div>  
</div>

<div class="form-group row justify-content-center">
<%= f.submit class:"btn btn-outline-light btn-lg"%>
</div>
<% end %>  